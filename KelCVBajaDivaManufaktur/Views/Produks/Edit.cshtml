@model KelCVBajaDivaManufaktur.Models.Produk

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CV Baja Diva Manufaktur - @ViewData["Title"]</title>

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/logo.jpg" />
</head>

<body>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Halaman Edit Produk</h4>
            <p class="card-description">
                Edit Produk
            </p>
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="forms-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="NamaProduk" class="control-label">Nama Produk</label>
                    <input asp-for="NamaProduk" type="text" class="form-control" id="NamaProduk" placeholder="Masukkan Nama Produk" required>
                    <span asp-validation-for="NamaProduk" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Gambar Produk</label>
                    <input type="file" name="photo" class="form-control" />
                    <span class="text-danger"></span>
                </div>

                <div class="form-group">
                    <img src="~/images/@Model.GambarProduk" style="width:250px; height:250px" alt="Gambar Produk" class="img-thumbnail" />
                </div>

                <div class="form-group">
                    <label asp-for="Stok" class="control-label">Stok</label>
                    <input asp-for="Stok" type="number" class="form-control" placeholder="Masukkan Jumlah Stok" />
                    <span asp-validation-for="Stok" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Harga">Total Bayar</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-primary text-white">Rp.</span>
                        </div>
                        <input asp-for="Harga" type="number" class="form-control" id="Harga" placeholder="Masukkan Harga " required>
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                    <span asp-validation-for="Harga" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Kategori">Cara Bayar</label>
                    <select asp-for="Kategori" class="form-control" id="Kategori">
                        <option value="Mesin Pengolah Makanan">Mesin Pengolah Makanan</option>
                        <option value="Mesin Pertanian">Mesin Pertanian</option>
                        <option value="Mesin Peternakan">Mesin Peternakan</option>
                        <option value="Mesin Pendukung Industri">Mesin Pendukung Industri</option>
                    </select>
                    <span asp-validation-for="Kategori" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Deskripsi" class="control-label">Deskripsi</label>
                    <textarea asp-for="Deskripsi" class="form-control" id="Deskripsi" rows="4"></textarea>
                    <span asp-validation-for="Deskripsi" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Simpan</button>
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

</body>
</html>