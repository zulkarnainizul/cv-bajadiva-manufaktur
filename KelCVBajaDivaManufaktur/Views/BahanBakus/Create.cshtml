@model KelCVBajaDivaManufaktur.Models.BahanBaku

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CV Baja Diva Manufaktur - @ViewData["Title"]</title>

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/logo.jpg" />
</head>
<body>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Halaman Tambah Bahan Baku</h4>
        <p class="card-description">
            Tambah Bahan Baku
        </p>
        <form asp-action="Create" class="forms-sample">
            <div class="form-group">
                <label asp-for="NamaBahan" >Nama Bahan Baku</label>
                <input asp-for="NamaBahan" type="text" class="form-control" id="NamaBahan" placeholder="Masukkan Nama Bahan Baku" required>
                <span asp-validation-for="NamaBahan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stok">Jumlah Stok</label>
                <input asp-for="Stok" type="number" class="form-control" id="Stok" placeholder="Masukkan Jumlah Stok">
                <span asp-validation-for="Stok" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Satuan">Satuan</label>
                <select asp-for="Satuan" class="form-control" id="Satuan">
                        <option>pcs</option>
                        <option>keping</option>
                        <option>batang</option>
                        <option>gram</option>
                        <option>kg</option>
                        <option>m</option>
                        <option>mm</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label">Supplier</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>

            <button type="submit" class="btn btn-primary mr-2">Simpan</button>
            <button asp-action="Index" class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
    <!-- plugins:js -->
    <script src="vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="vendors/chart.js/Chart.min.js"></script>
    <script src="vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="js/off-canvas.js"></script>
    <script src="js/hoverable-collapse.js"></script>
    <script src="js/template.js"></script>
    <script src="js/settings.js"></script>
    <script src="js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="js/dashboard.js"></script>
    <script src="js/Chart.roundedBarCharts.js"></script>
    <!-- End custom js for this page-->
</body>
</html>



