@model KelCVBajaDivaManufaktur.Models.PesanBB

@{
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>CV Baja Diva Manufaktur - @ViewData["Title"]</title>

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/logo.jpg" />
</head>
<body>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Halaman Tambah Pesanan Bahan Baku</h4>
            <p class="card-description">
                Tambah Pesanan Bahan Baku
            </p>

            <form asp-action="Create" class="forms-sample" id="myForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (TempData["SuccessMessage"] != null)
                {
                    <script>
                        document.addEventListener("DOMContentLoaded", function () {
                            alert('@TempData["SuccessMessage"]');
                        });
                    </script>
                }
                <div class="form-group">
                    <label asp-for="BahanBakuId" class="control-label">Nama Bahan Baku</label>
                    <select asp-for="BahanBakuId" class="form-control" asp-items="ViewBag.BahanBakuId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="StokBB" class="control-label">Jumlah Stok</label>
                    <input asp-for="StokBB" type="number" class="form-control" placeholder="Masukkan Jumlah Stok">
                    <span asp-validation-for="StokBB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SatuanBB" class="control-label">Satuan</label>
                    <select asp-for="SatuanBB" class="form-control">
                        <option>pcs</option>
                        <option>keping</option>
                        <option>batang</option>
                        <option>gram</option>
                        <option>kg</option>
                        <option>m</option>
                        <option>mm</option>
                    </select>
                    <span asp-validation-for="SatuanBB" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label">Supplier</label>
                    <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Pesan</button>
                <a asp-controller="BahanBakus" asp-action="Index" class="btn btn-light">Cancel</a>
            </form>
           
        </div>
        
    </div>
    
</body>
</html>
